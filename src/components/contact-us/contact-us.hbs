<section class="contact-us" id="contact-us">
  <div class="container" >
    <h2 class="headline contact-us__headline">Weâ€™d love to hear about your project</h2>
    <form method="post" class="contact-us__form" @submit.prevent="checkForm" id="vue-form" novalidate>
      <div class="row">
        <div class="col-md-4">
          <div class="contact-us__field-wrapper">
            <input type="text"
                   name="name"
                   placeholder="Name"
                   class="contact-us__field"
                   autocomplete="off"
                   v-model="name"
                   @input="checkFields"
                   @blur="checkFields" >
            <p class="contact-us__field-error" v-text="name_error"></p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="contact-form__field-wrapper">
            <input type="email"
                   name="email"
                   class="contact-us__field"
                   placeholder="Email"
                   autocomplete="off"
                   v-model="email"
                   @input="checkFields"
                   @blur="checkFields" >
            <p class="contact-us__field-error" v-text="email_error"></p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="contact-form__field-wrapper">
            <input type="phone"
                   name="phone"
                   placeholder="380 XX XXX XX XX"
                   class="contact-us__field"
                   autocomplete="off"
                   v-model="phone"
                   @input="checkFields"
                   @blur="checkFields" >
            <p class="contact-us__field-error" v-text="phone_error"></p>
          </div>
        </div>
      </div>
      <textarea name="message" id="" placeholder="Message" cols="30" rows="10" class="contact-us__area" v-model="message"></textarea>

      <button type="submit" class="contact-us__submit">Submit</button>

    </form>
  </div>
</section>

